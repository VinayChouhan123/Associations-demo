<h1>Books List</h1>

<table width="30%">
	<thead>
		<tr>
			<th>name</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.name %></td>
				<td><%= link_to "edit book", edit_book_path(book) %></td>
				<td><%= link_to "delete book", book_path(book), data: { method: :delete, confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
	</tbody>
</table><br>

